{
	"$schema": "./node_modules/wrangler/config-schema.json",
	"name": "umo_transcriptions",
	"main": "src/index.ts",
	"compatibility_date": "2025-09-27",
	"compatibility_flags": ["nodejs_compat"],
	"observability": {
		"logs": {
			"enabled": true,
			"head_sampling_rate": 0.3
		},
		"traces": {
			"enabled": true,
			"head_sampling_rate": 0.1
		}
	},
	"placement": { "mode": "smart" },
	"routes": [
		{
			"pattern": "transcriptions.umo.lnksl.com",
			"custom_domain": true
		}
	],
	"ai": {
		"binding": "AI"
	},
	"secrets_store_secrets": [
		{
			"binding": "SECRET",
			"store_id": "99c7a9edacf84c7498bab2eb3903da47",
			"secret_name": "UMO_TRANSCRIPTIONS_API_KEY"
		}
	],
	"queues": {
		"producers": [
			{
				"binding": "PRODUCER",
				"queue": "umo-transcriptions"
			}
		],
		"consumers": [
			{
				"queue": "umo-transcriptions",
				"max_batch_size": 10,
				"max_batch_timeout": 5 // 5 seconds
			}
		]
	},
	"r2_buckets": [
		{
			"binding": "BUCKET",
			"bucket_name": "umo",
			"remote": true
		}
	]
}
