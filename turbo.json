{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"clean": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"env": [
				"NEXT_PUBLIC_S3_PUBLIC_URL",
				"S3_ACCESS_KEY",
				"S3_SECRET_KEY",
				"S3_ENDPOINT",
				"S3_BUCKET",
				"S3_REGION",
				"DATABASE_URL",
				"CLOUDFLARE_ACCOUNT_ID",
				"CLOUDFLARE_AIG_API_KEY"
			],
			"inputs": ["$TURBO_DEFAULT$", ".env"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"start": {
			"dependsOn": ["^start"],
			"cache": false
		},
		"lint": {
			"dependsOn": ["^lint"]
		}
	}
}
